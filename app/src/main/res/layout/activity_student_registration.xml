<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_color"
    android:padding="10dp"
    android:gravity="center"
    tools:context=".StudentRegistration">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

            <TextView
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="Name :"
            android:textSize="20sp" />

        <EditText

            android:id="@+id/StudentNameEditTextId"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:text="ID :"
            android:textSize="20sp" />

        <EditText

            android:id="@+id/StudentIDEditTextId"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:text="Batch :"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinerId1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Section :"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinerId2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Spinner>


    </LinearLayout>


    <Button
        android:id="@+id/StudentRegistrationButtonId"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#ed4411"
        android:text="Register" />

</LinearLayout>